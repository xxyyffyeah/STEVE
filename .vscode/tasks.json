{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "运行prompt_optimization.py(v1配置)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/evaluation/prompt_optimization.py",
                "--task",
                "BBH_object_counting",
                "--evaluation_engine",
                "gpt-4o",
                "--test_engine",
                "gpt-3.5-turbo"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "运行Python文件(手动输入参数)",
            "type": "shell",
            "command": "python",
            "args": [
                "${file}",
                "${input:pythonArgs}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "pythonArgs",
            "description": "输入Python脚本的参数",
            "default": "",
            "type": "promptString"
        }
    ]
}

